{% extends 'base.html.twig' %}

{% block metas %}
    <meta name="turbo-cache-control" content="no-preview"/>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <aside class="col-2">
                <nav class="list-group">
                    <a href="{{ path('user_settings_account') }}"
                       class="list-group-item list-group-item-action {{ app.request.get('_route') == 'user_settings_account' ? 'active' }}">
                        <i class="fa-solid fa-user fa-fw"></i>
                        Account Settings
                    </a>
                </nav>
            </aside>

            <main class="col">
                {% block content %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
